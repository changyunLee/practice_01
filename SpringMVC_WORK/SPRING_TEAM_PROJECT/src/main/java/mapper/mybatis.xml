<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.proj.service.mapper.boardMapper">


	<select id="selectALL" resultType="co.kr.proj.userVO.UserVO">
		select * from user_cook
	</select>

	<select id="myinfo" resultType="co.kr.proj.userVO.UserVO" parameterType="string">
		select * from user_cook where user_id = #{user_id}
	</select>

	<select id="getLatestUserNum" resultType="int">
		select max(user_num) from user_cook
	</select>
	
	<insert id="insertVO" parameterType="co.kr.proj.userVO.UserVO">
		insert into user_cook values
		(#{vo.user_num},#{vo.user_id},#{vo.user_pw},#{vo.user_name},#{vo.user_age},#{vo.user_email})
	</insert>
	
	<select id="getMyNum" resultType="int" parameterType="String">
		select user_num from user_cook where user_id= #{_myID}
	</select>
	
	
	<update id="userUpdate" parameterType="co.kr.proj.userVO.UserVO" >
		update user_cook 
		set 
		user_id = #{_vo.user_id}, user_pw = #{_vo.user_pw}, user_name = #{_vo.user_name}, user_age = #{_vo.user_age}, user_email=#{_vo.user_email}
		where user_num = #{_vo.user_num}
	</update>
	
	<delete id="userDelete" parameterType="int">
		delete from user_cook where user_num = #{_myNum}
	</delete>

</mapper>