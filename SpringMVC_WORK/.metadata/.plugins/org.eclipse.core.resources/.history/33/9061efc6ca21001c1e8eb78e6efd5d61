	function login() {
		$.ajax({
			url:"loginj.do",
			method : "POST",
			data : $("#login").serialize(),
			dataType :"JSON",
			success : function (result){
				console.log(result);
				alert("로그인 성공");
				location.href="home.do";
			}
			
			
		})
	}

